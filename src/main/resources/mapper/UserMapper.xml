<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.superb.mapper.UserMapper">
    <resultMap id="user" type="com.superb.entity.User">
        <id column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="date_birth" property="dateBirth"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="superbById" resultMap="user">
        select user_id,user_name,photo from user where user_id = #{userId} and deleted = 0
    </select>

    <select id="adminListDeleted" resultMap="user">
        select * from user
    </select>
    <select id="getUserNotId" resultMap="user" parameterType="java.lang.Long">
        select * from user where user_id != #{userId}
    </select>


    <select id="adminLikeDeleted" resultMap="user" parameterType="java.lang.String">
        select *
        from user
        where
        user_id like #{str} or
        user_name like #{str} or
        email like #{str} or
        sign like #{str} or
        gender like #{str} or
        date_birth like #{str} or
        create_time like #{str} or
        update_time like #{str} or
        grade like #{str}
    </select>

</mapper>
